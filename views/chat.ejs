<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Socket.IO chat</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>
  <body>
    <table>
      <tr>
        <td>
          Nome
        </td>
        <td>
          <input type="text" id="usr" name="urs" placeholder="Meu nome" />      
        </td>
      </tr>
      <tr>
        <td>tipo de usuário</td>
        <td>
          <input type="radio" id="type_1" name="type" value="paciente" /><label>Paciente</label>
          <input type="radio" id="type_2" name="type" value="medico" /><label>Medico</label>
        </td>
      </tr>
      <tr>
        <td>Categoria</td>
        <td>
          <select name="categori" id="categ">
            <option value="medico">Médico</option>
            <option value="piscologo">Psicologo</option>
          </select>
        </td>
      </tr>
    </table>
    

    <hr />
    <ul id="messages"></ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script>
      $(function () {
        var socket = io();
        $('form').submit(function(){
          socket.emit('chat message', ($('#usr').val() + ' - ' + $('#m').val()));
          $('#m').val('');
          return false;
        });
        socket.on('chat message', function(msg){
          $('#messages').append($('<li>').text(msg));
        });
      });
    </script>
  </body>
</html>
